{
  "compilerOptions": {
    "strict": true,
    "target": "ES2017",
    "lib": ["ES2019", "ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "keyofStringsOnly": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "include": ["./src/**/*"]
}
